@using u21653268_HW03.Models
@model List<FileModel>
@{
    ViewBag.Title = "Images";
}
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.mousewheel-3.0.6.pack.js"></script>
<script src="~/Scripts/jquery.fancybox.js?v=2.1.5"></script>
<link href="~/Content/jquery.fancybox.css?v=2.1.2" rel="stylesheet" media="screen" />
<link href="~/Scripts/jquery.fancybox.css" rel="stylesheet" />

<br />
<h1>Your Images</h1>
<br />
<h3>Images of any file type</h3>
<br />

<div class="row row-cols-1 row-cols-md-3">
    @foreach (FileModel file in Model)
    {
        <div class="col mb-3 gallery">

            <a rel="group" href="~/Media/Images/@file.FileName" class="fancybox">
                <img class="img-thumbnail" src="~/Media/Images/@file.FileName" alt="image file" />
            </a>
            <div>
                <h6>@file.FileName</h6>
                <button class="btn btn-outline-success">
                    @Html.ActionLink("Download", "DownloadImage",
                        new { fileName = file.FileName })
                </button>
                <button class="btn btn-outline-danger">
                    @Html.ActionLink("Delete", "DeleteImage",
                        new { fileName = file.FileName },
                        new { onclick = "return confirm('Are you sure you want to delete this image?');" })
                </button>
            </div>

        </div>

    }
</div>


<script type="text/javascript">
    $(document).ready(function ($) {
        $(".fancybox").fancybox({

        });
    });
</script>